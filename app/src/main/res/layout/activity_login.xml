<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".LoginActivity">
    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="200dp"
        android:id="@+id/githubLoginBtn"
        android:background="@color/colorAccent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="Github Login"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/fui_ic_github_white_24dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/emailTextInput"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/passwordText"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="200dp"
        android:id="@+id/firebaseLoginBtn"
        android:background="@color/colorAccent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="Email Login"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_email_black_24dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="200dp"
        android:id="@+id/firebaseCreateBtn"
        android:background="@color/colorAccent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="Create User"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_email_black_24dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:text="*Only google login works properly :("/>

</LinearLayout>